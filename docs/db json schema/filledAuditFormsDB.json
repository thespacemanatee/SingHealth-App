{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/product.schema.json",
    "title": "audit",
    "description": "A form filled up after an audit",
    "type": "object",
    "properties": {
        "_id": {
            "description": "The unique identifier for an audit",
            "type": "string"
        },
        "type": {
            "description": "fnb / non_fnb / covid19",
            "type": "string"
        },
        "formTemplateID": { "type": "string" },
        "answers": {
            "description": "All the questions for this audit form",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "answer": {"type": "boolean"},
                    "images": {
                        "description": "The URL to query for the image",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 0,
                        "maxItems": 3,
                        "uniqueItems": true
                    },
                    "rectificationImages":{
                        "description": "The URL to query for the image",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 0,
                        "uniqueItems": true
                    },
                    "remarks": {"type": "string"},
                    "deadline":{
                        "description": "date in DDMMYYYY",
                        "type":"string" 
                    },
                    "rectified": {"type": "boolean"},
                    "requestForExt": {"type": "boolean"},
                    "acceptedRequest": {"type": "boolean"},
                    "questionTags": {
                        "description": "Category of question",
                        "type": "array",
                        "items": {"type": "string"}
                    }
                },
                "required": [ "answer" ]
            }
        }
    },
    "required": [ "_id", "type", "formTemplateID", "answers" ]
}
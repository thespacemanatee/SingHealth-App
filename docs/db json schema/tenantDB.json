{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/product.schema.json",
    "title": "tenant",
    "description": "Info about a single tenant",
    "type": "object",
    "properties": {
        "_id": {
          "description": "The unique identifier for a tenant",
          "type": "string"
        },
        "name": {
            "description": "Tenant's full name in upper case",
            "type": "string"
        },
        "email": {
            "description": "The user email of a tenant",
            "type": "string"
        },
        "pswd": {
            "description": "The password credentials for a tenant",
            "type": "string"
        },
        "institutionID": {
            "description": "The institution where a tenant operates under",
            "type": "string"
        },
        "stall": {
            "description": "All the info regarding their stall",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of the stall",
                    "type": "string"
                },
                "companyName": {
                    "description": "Name of the company the stall is representing",
                    "type": "string"
                },
                "companyPOC": {
                    "description": "All the info regarding the company's point of contact",
                    "type": "object",
                    "properties": {
                        "name": {
                            "description": "Name of the company POC",
                            "type": "string"
                        },
                        "email": {
                            "description": "Email of the company POC",
                            "type": "string"
                        }
                    },
                    "required": ["name", "email"]
                },
                "address": {
                    "description": "All the info regarding the stall address",
                    "type": "object",
                    "properties": {
                        "blk": {
                            "description": "blk number. I.e. 243A",
                            "type": "string"
                        },
                        "street": {
                            "description": "Street name",
                            "type": "string"
                        },
                        "bldg": {
                            "description": "Name of the building",
                            "type": "string"
                        },
                        "unitNo": {
                            "description": "The unit number. I.e. 02-212 (without hashes)",
                            "type": "string"
                        },
                        "zipcode": {
                            "description": "The zipcode of the stall. I.e. 123456 (only numbers)",
                            "type": "integer"
                        }
                    },
                    "required": [ "unitNo" ]
                },
                "fnb": {
                    "description": "Whether the stall is an F&B stall",
                    "type": "boolean"
                }
            },
            "required": ["name", "companyName", "companyPOC", "address", "fnb"]
        },
        "createdBy": {
            "description": "ID of staff who created this account",
            "type": "string"
        },
        "dateCreated": {
            "description": "Date when the account was created (submitted to database), in ISO date format",
            "type": "string"
        },
        "tenantDateStart": {
            "description": "Date when tenantship started, without including exact date.",
            "type": "string"
        },
        "tenantDateEnd": {
            "description": "Date when tenantship ends, without including exact date.",
            "type": "string"
        },
        "expoToken": {
            "description": "The device identifier used to send push notifications to that device",
            "type": "array",
            "minItems": 0,
            "items": {
                "type":"string"
            }
        }
    },
    "required": [ "_id", "name", "email", "pswd", "institutionId", "stall", "createdBy", "dateCreated", "tenantDateStart", "tenantDateEnd"]
  }
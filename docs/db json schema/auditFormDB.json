{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/product.schema.json",
    "title": "Audit form",
    "description": "An audit form",
    "type": "object",
    "properties": {
        "formId": {
          "description": "The unique identifier for an audit form",
          "type": "string"
        },
        "institution": {
            "description": "staff user email for the app",
            "type": "string"
        },
        "questions": {
            "description": "all the questions for this",
            "type": "object",
            "patternProperties": {
                "^[0-9]+$": { 
                    "description": "details for a single question",
                    "type": "object",
                    "properties": {
                        "question": {
                            "type": "string"
                        },
                        "answer": {
                            "type": "boolean"
                        }

                    },
                    "required": [ "question", "answer" ]
                }
            },
            "additionalProperties": false
        }
    },
    "required": [ "formId", "institution", "questions" ]
}

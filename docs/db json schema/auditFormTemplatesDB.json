{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/product.schema.json",
    "title": "Audit form",
    "description": "An audit form",
    "type": "object",
    "properties": {
        "_id": {
          "description": "The unique identifier for an audit form",
          "type": "string"
        },
        "questions": {
            "description": "All the questions for this audit form",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "question": {
                        "type": "string"
                    },
                    "answer": {
                        "type": "boolean"
                    },
                    "image": {
                        "description": "The URL to query for the image",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 0,
                        "uniqueItems": true
                    },
                    "rectificationImages":{
                        "description": "The URL to query for the image",
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 0,
                        "uniqueItems": true
                    },
                    "remarks": {
                        "type": "string"
                    },
                    "deadline":{
                        "description": "date in DDMMYYYY",
                        "type":"string" 
                    },
                    "rectified": {"type": "boolean"},
                    "requestForExt": {"type": "boolean"},
                    "acceptedRequest": {"type": "boolean"}
                }
            },
            "additionalProperties": false
        },
        "type": {
            "description": "fnb / non_fnb / covid19",
            "type": "string"
        }
    },
    "required": [ "_id", "questions", "type" ]
}
